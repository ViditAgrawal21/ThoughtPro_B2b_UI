# ThoughtPro B2B Frontend Environment Configuration

# API Configuration
REACT_APP_API_URL=https://thoughtprob2b.thoughthealer.org/api
REACT_APP_DISABLE_API=false
REACT_APP_MOCK_MODE=false
REACT_APP_OFFLINE_MODE=false

# App Configuration
REACT_APP_APP_NAME=ThoughtPro B2B
REACT_APP_VERSION=1.0.0
REACT_APP_ENV=development

# Development Settings
REACT_APP_DEBUG_MODE=true
REACT_APP_ENABLE_ANALYTICS=false

# To run in offline mode without API calls, set:
# REACT_APP_OFFLINE_MODE=true

# To disable API completely during development, set:
# REACT_APP_DISABLE_API=true